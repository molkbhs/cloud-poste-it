# Backend - Production Environment Template
# À copier dans Railway Dashboard → Environment Variables

NODE_ENV=production
PORT=3000

# Base de Données (AUTO via Railway)
# DATABASE_URL=postgresql://user:password@host:port/database
# ↑ Railway la crée automatiquement

# CORS
CORS_ORIGIN=https://cloud-poste-it.vercel.app

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_S3_BUCKET=postit-app-uploads

# Optional: Monitoring
LOG_LEVEL=info
